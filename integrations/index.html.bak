    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');
        html {
            scroll-behavior: smooth;
        }
        body {
            font-family: 'Inter', sans-serif;
            scroll-snap-type: y mandatory;
            overflow-x: hidden;
        }
        section {
            scroll-snap-align: start;
        }
        .card-hover {
            transition: all 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-4px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        #typewriter-cursor {
            font-family: 'Inter', monospace;
            color: #1f2937;
            display: inline-block;
            margin-left: 2px;
            line-height: 1;
        }
        #typewriter-wrapper.is-typing #typewriter-cursor {
            animation: blink 1s infinite step-end;
        }
        @keyframes blink {
            0%, 100% { opacity: 1; }
            50% { opacity: 0; }
        }
        #chatbot-window {
            opacity: 0;
            visibility: hidden;
            pointer-events: none;
            transform: scale(0.8) translateY(40px);
            transition: all 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.1);
            transform-origin: bottom right;
        }
        #chatbot-window.is-active {
            opacity: 1;
            visibility: visible;
            pointer-events: auto;
            transform: scale(1) translateY(0);
        }
        .glass-header {
            background: rgba(15, 23, 42, 0.9);
            backdrop-filter: blur(12px);
            -webkit-backdrop-filter: blur(12px);
        }
        @keyframes ripple {
            0% { transform: scale(1); opacity: 1; }
            100% { transform: scale(1.6); opacity: 0; }
        }
        .ripple-active::after {
            content: "";
            position: absolute;
            inset: 0;
            background: rgba(16, 185, 129, 0.4);
            border-radius: 9999px;
            z-index: -1;
            animation: ripple 2s infinite;
        }
        .no-scrollbar::-webkit-scrollbar { 
            display: none; 
        }
        ::selection {
            background-color: black;
            color: white;
        }
        ::-moz-selection {
            background-color: black;
            color: white;
        }
        .nav-link {
            position: relative;
            text-decoration: none;
        }
        .nav-link::after {
            content: '';
            position: absolute;
            bottom: -4px;
            left: 0;
            width: 0;
            height: 2px;
            background-color: black;
            transition: width 0.3s ease-in-out;
        }
        .nav-link.active::after {
            width: 66.66%;
        }
        .nav-link:hover::after {
            width: 100%;
        }
        .chat-bubble {
            position: relative;
            padding: 1.5rem;
            border-radius: 1rem;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        }

        .chat-bubble:hover {
            transform: translateY(-4px) scale(1.02);
            box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        }
        .chat-bubble::after, .chat-bubble::before {
            content: '';
            position: absolute;
            width: 0;
            height: 0;
            border-style: solid;
        }
        .chat-bubble-left {
            background-color: white;
            border: 2px solid black;
        }
        .chat-bubble-left::after {
            border-width: 10px 0 10px 10px;
            border-color: transparent transparent transparent white;
            top: 20px;
            right: -10px;
            z-index: 1;
        }
        .chat-bubble-left::before {
            border-width: 12px 0 12px 12px;
            border-color: transparent transparent transparent black;
            top: 18px;
            right: -14px;
            z-index: 0;
        }
        .chat-bubble-right {
            background-color: black;
            color: white;
            border: 2px solid black;
        }
        .chat-bubble-right .font-semibold {
            color: white;
        }
        .chat-bubble-right::after {
            border-width: 10px 10px 10px 0;
            border-color: transparent black transparent transparent;
            top: 20px;
            left: -10px;
            z-index: 1;
        }
        .chat-bubble-right::before {
            border-width: 12px 12px 12px 0;
            border-color: transparent black transparent transparent;
            top: 18px;
            left: -14px;
            z-index: 0;
        }

        .heading-underline {
            position: relative;
            text-decoration: none;
        }

        .heading-underline::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 0;
            width: 66.66%;
            height: 3px;
            background-color: white;
            transition: width 0.3s ease-in-out;
        }

        .heading-underline:hover::after {
            width: 100%;
        }

        .heading-underline-black {
            position: relative;
            text-decoration: none; /* Ensure no default underline */
        }

        .heading-underline-black::after {
            content: '';
            position: absolute;
            bottom: -10px; /* Adjust as needed for vertical position */
            left: 0; /* Align to the left of the parent span */
            width: 66.66%; /* Initial 2/3 width */
            height: 3px;
            background-color: black;
            transition: width 0.3s ease-in-out;
        }

        .heading-underline-black:hover::after {
            width: 100%; /* Full width on hover */
        }
        
        /* Tab Navigation Styles */
        .tab-active {
            border-color: #1f2937 !important; /* gray-900 */
            color: #1f2937 !important; /* gray-900 */
        }
        
        .tab-content.active {
            display: block;
        }
        
        .tab-content {
            display: none;
        }
        
        .tab-viz.active {
            display: block;
        }
        
        .tab-viz {
            display: none;
        }

        .marquee-container {
            width: 100%;
            overflow: hidden;
            -webkit-mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
            mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
        }

        .marquee-content {
            animation: marquee-scroll 40s linear infinite;
            width: max-content; /* Ensure content takes full width */
            will-change: transform;
        }

        @media (min-width: 768px) {
            .marquee-content {
                animation-duration: 60s;
            }
        }

        @keyframes marquee-scroll {
            0% { transform: translateX(0); }
            100% { transform: translateX(-50%); } /* Scrolls one full set of logos */
        }

        @keyframes marquee-scroll-reverse {
            0% { transform: translateX(-50%); }
            100% { transform: translateX(0); }
        }

        .marquee-reverse {
            animation-name: marquee-scroll-reverse;
        }

        #cursor-glow {
            position: absolute;
            width: 200px;
            height: 200px;
            background: radial-gradient(circle, rgba(255, 255, 255, 0.2) 0%, rgba(255, 255, 255, 0.05) 40%, rgba(255, 255, 255, 0) 80%);
            border-radius: 50%;
            pointer-events: none;
            transform: translate(-50%, -50%);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        #solutions-container:hover #cursor-glow {
            opacity: 1;
        }

        #solutions-container, #sheen-border-container {
            transition: transform 0.1s linear; /* Use linear for direct scroll mapping */
        }

        .purple-sheen-text {
            background: linear-gradient(115deg,
                black 0%,
                black 30%,
                #9b4dff 45%,
                #9b4dff 55%,
                black 70%,
                black 100%
            );
            background-size: 300% auto;
            background-clip: text;
            -webkit-background-clip: text;
            color: transparent;
            animation: shine 7s linear infinite;
        }

                @keyframes shine {

                    0% { background-position: -300% center; }

                    100% { background-position: 300% center; }

                }

        

                .sheen-border-wrapper {

                  background: linear-gradient(115deg,

                    #B1ADCE 0%,

                    #B1ADCE 40%,

                    #F2F1FD 50%, /* Lighter purple sheen */

                    #B1ADCE 60%,

                    #B1ADCE 100%

                  );

                  background-size: 300% auto;

                  animation: shine 7s linear infinite;

                }

        .sheen-button {
            background: linear-gradient(115deg,
                #4f00bc 0%, /* Darker purple */
                #6f00e6 30%, /* Medium purple */
                #9b4dff 50%, /* Lighter purple for the sheen */
                #6f00e6 70%,
                #4f00bc 100%
            );
            background-size: 300% auto;
            animation: shine 7s linear infinite;
            color: white; /* Ensure text is white */
            transition: background-position 0.3s ease; /* Smooth transition for hover effect */
        }
    </style>
</head>
