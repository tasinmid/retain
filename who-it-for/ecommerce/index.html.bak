<!-- Scripts -->
<script>
// Page load
window.addEventListener('DOMContentLoaded', () => requestAnimationFrame(() => document.body.classList.add('loaded')));

// Scroll reveal with directional support
const revealObserver = new IntersectionObserver((entries) => {
    entries.forEach(e => { if (e.isIntersecting) { e.target.classList.add('visible'); revealObserver.unobserve(e.target); } });
}, { threshold: 0.1 });
document.querySelectorAll('.reveal, .reveal-left, .reveal-right').forEach(el => revealObserver.observe(el));

// Check mark draw animation
const checkObserver = new IntersectionObserver((entries) => {
    entries.forEach(e => { if (e.isIntersecting) { e.target.classList.add('drawn'); checkObserver.unobserve(e.target); } });
}, { threshold: 0.5 });
document.querySelectorAll('.check-draw').forEach(el => checkObserver.observe(el));

// Counter animation with overshoot easing
const counterObserver = new IntersectionObserver((entries) => {
    entries.forEach(e => {
        if (!e.isIntersecting) return;
        const el = e.target;
        const target = parseFloat(el.dataset.target);
        const suffix = el.dataset.suffix || '';
        const isDecimal = String(target).includes('.');
        const duration = 2000;
        const start = performance.now();
        const animate = (now) => {
            let p = Math.min((now - start) / duration, 1);
            // Overshoot easing (back ease out)
            const c1 = 1.70158, c3 = c1 + 1;
            const ease = 1 + c3 * Math.pow(p - 1, 3) + c1 * Math.pow(p - 1, 2);
            const val = Math.max(0, ease * target);
            el.textContent = (isDecimal ? val.toFixed(1) : Math.round(val)) + suffix;
            if (p < 1) requestAnimationFrame(animate);
            else el.textContent = (isDecimal ? target.toFixed(1) : target) + suffix;
        };
        el.textContent = (isDecimal ? '0.0' : '0') + suffix;
        requestAnimationFrame(animate);
        counterObserver.unobserve(el);
    });
}, { threshold: 0.5 });
document.querySelectorAll('.counter').forEach(el => counterObserver.observe(el));

// Step progress line animation
const stepObserver = new IntersectionObserver((entries) => {
    entries.forEach(e => {
        if (e.isIntersecting) {
            const line = e.target.querySelector('.step-progress-line');
            if (line) { line.style.transform = 'scaleX(1)'; line.style.position = 'relative'; line.style.zIndex = '1'; }
            stepObserver.unobserve(e.target);
        }
    });
}, { threshold: 0.3 });
const howSection = document.getElementById('howItWorks');
if (howSection) stepObserver.observe(howSection);

// Tabs â€” scroll-driven progression (smooth with dead zones)
(function() {
    const TAB_IDS = ['tab-omni','tab-cart','tab-profiles','tab-analytics'];
    const TOTAL = TAB_IDS.length;
    let currentIdx = 0;
    const outer = document.getElementById('scrollTabsOuter');
    const progressBar = document.getElementById('tabProgressBar');
    const allBtns = document.querySelectorAll('.tab-btn');

    // Dead zone: first 40% and last 8% of scroll are buffer (no tab switching)
    const DEAD_TOP = 0.40;
    const DEAD_BOTTOM = 0.08;
    const ACTIVE_RANGE = 1 - DEAD_TOP - DEAD_BOTTOM;

    const section = document.getElementById('scrollTabsSection');

    // Dynamically set sticky top so entire section is visible (not cropped at bottom)
    function adjustStickyTop() {
        const sectionH = section.scrollHeight;
        const viewportH = window.innerHeight;
        if (sectionH > viewportH) {
            // Negative top: section scrolls up just enough to reveal bottom content
            section.style.top = -(sectionH - viewportH) + 'px';
        } else {
            section.style.top = '0px';
        }
    }

    // More scroll space for breathing room (extra viewport for dead zones)
    function setOuterHeight() {
        outer.style.height = (TOTAL + 2) * window.innerHeight + 'px';
        adjustStickyTop();
    }
    setOuterHeight();
    window.addEventListener('resize', setOuterHeight);
    // Recalculate after images load
    window.addEventListener('load', adjustStickyTop);

    function switchToTab(idx, direction) {
        if (idx < 0 || idx >= TOTAL || idx === currentIdx) return false;
        const prevIdx = currentIdx;
        currentIdx = idx;
        const dir = direction || 'down';
        const slideForward = dir === 'down'; // forward = slide left, backward = slide right

        // Update buttons
        allBtns.forEach(b => { b.classList.remove('active'); b.classList.add('text-gray-600'); });
        allBtns[idx].classList.add('active'); allBtns[idx].classList.remove('text-gray-600');

        // Old content: slide out
        const oldContent = document.getElementById(TAB_IDS[prevIdx]);
        if (oldContent) {
            oldContent.style.transform = slideForward ? 'translateX(-100%)' : 'translateX(100%)';
            setTimeout(() => { oldContent.style.visibility = 'hidden'; }, 500);
        }

        // Old image: slide out
        const oldImgKey = TAB_IDS[prevIdx].replace('tab-','');
        const oldImg = document.getElementById('tab-img-' + oldImgKey);
        if (oldImg) {
            oldImg.style.transform = slideForward ? 'translateX(-100%)' : 'translateX(100%)';
            setTimeout(() => { oldImg.style.visibility = 'hidden'; }, 500);
        }

        // New content: position off-screen, then slide in
        const content = document.getElementById(TAB_IDS[idx]);
        content.style.transition = 'none';
        content.style.transform = slideForward ? 'translateX(100%)' : 'translateX(-100%)';
        content.style.visibility = 'visible';
        requestAnimationFrame(() => {
            requestAnimationFrame(() => {
                content.style.transition = 'transform 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
                content.style.transform = 'translateX(0)';
            });
        });

        // New image: position off-screen, then slide in
        const imgKey = TAB_IDS[idx].replace('tab-','');
        const newImg = document.getElementById('tab-img-' + imgKey);
        if (newImg) {
            newImg.style.transition = 'none';
            newImg.style.transform = slideForward ? 'translateX(100%)' : 'translateX(-100%)';
            newImg.style.visibility = 'visible';
            requestAnimationFrame(() => {
                requestAnimationFrame(() => {
                    newImg.style.transition = 'transform 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
                    newImg.style.transform = 'translateX(0)';
                });
            });
        }

        // Progress bar: fills proportionally (25%, 50%, 75%, 100%)
        progressBar.style.width = ((idx + 1) / TOTAL * 100) + '%';
        return true;
    }

    // Scroll-based with dead zones
    function onScroll() {
        const rect = outer.getBoundingClientRect();
        const scrolledInto = -rect.top;
        const maxScroll = outer.offsetHeight - window.innerHeight;
        if (scrolledInto < 0 || scrolledInto > maxScroll) return;

        const rawProgress = scrolledInto / maxScroll; // 0 to 1

        // Apply dead zones: remap so tabs only switch in the active range
        let adjustedProgress;
        if (rawProgress <= DEAD_TOP) {
            adjustedProgress = 0;
        } else if (rawProgress >= 1 - DEAD_BOTTOM) {
            adjustedProgress = 1;
        } else {
            adjustedProgress = (rawProgress - DEAD_TOP) / ACTIVE_RANGE;
        }
        adjustedProgress = Math.max(0, Math.min(1, adjustedProgress));

        const targetIdx = Math.min(TOTAL - 1, Math.floor(adjustedProgress * TOTAL));
        if (targetIdx !== currentIdx) {
            const dir = targetIdx > currentIdx ? 'down' : 'up';
            switchToTab(targetIdx, dir);
        }

        // Smooth progress bar width (based on current tab)
        progressBar.style.width = ((currentIdx + 1) / TOTAL * 100) + '%';
    }

    window.addEventListener('scroll', onScroll, { passive: true });

    // Click handlers
    allBtns.forEach((btn, i) => {
        btn.addEventListener('click', () => {
            switchToTab(i, i > currentIdx ? 'down' : 'up');
            const outerTop = outer.getBoundingClientRect().top + window.scrollY;
            const maxScroll = outer.offsetHeight - window.innerHeight;
            // Map tab index back to scroll position accounting for dead zones
            const adjustedProgress = i / (TOTAL - 1);
            const rawProgress = DEAD_TOP + adjustedProgress * ACTIVE_RANGE;
            const targetScroll = outerTop + rawProgress * maxScroll;
            window.scrollTo({ top: targetScroll, behavior: 'smooth' });
        });
    });

    // Initialize first tab visible (already positioned in HTML, just ensure state is correct)
    document.getElementById(TAB_IDS[0]).style.visibility = 'visible';
    document.getElementById(TAB_IDS[0]).style.transform = 'translateX(0)';
    document.getElementById('tab-img-' + TAB_IDS[0].replace('tab-','')).style.visibility = 'visible';
    document.getElementById('tab-img-' + TAB_IDS[0].replace('tab-','')).style.transform = 'translateX(0)';
})();

// Mobile menu toggle
document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
    document.getElementById('mobile-menu').classList.toggle('hidden');
});

// Navbar scroll
window.addEventListener('scroll', () => {
    document.querySelector('nav').classList.toggle('scrolled', window.scrollY > 50);
    // Back to top
    document.getElementById('backToTop').classList.toggle('show', window.scrollY > 600);
}, { passive: true });

// 3D tilt
document.querySelectorAll('.tilt-card').forEach(card => {
    card.addEventListener('mousemove', (e) => {
        const rect = card.getBoundingClientRect();
        const x = (e.clientX - rect.left) / rect.width - 0.5;
        const y = (e.clientY - rect.top) / rect.height - 0.5;
        card.style.transform = `translateY(-6px) perspective(600px) rotateX(${-y * 6}deg) rotateY(${x * 6}deg)`;
    });
    card.addEventListener('mouseleave', () => { card.style.transform = ''; });
});

// Cursor glow on dark sections
['challenges', 'statsSection'].forEach(id => {
    const section = document.getElementById(id);
    const glow = document.getElementById(id === 'challenges' ? 'challengeGlow' : 'statsGlow');
    if (!section || !glow) return;
    section.addEventListener('mousemove', (e) => {
        const rect = section.getBoundingClientRect();
        glow.style.left = (e.clientX - rect.left) + 'px';
        glow.style.top = (e.clientY - rect.top) + 'px';
        glow.style.opacity = '1';
    });
    section.addEventListener('mouseleave', () => { glow.style.opacity = '0'; });
});

// Magnetic button effect
document.querySelectorAll('.magnetic-btn').forEach(btn => {
    btn.addEventListener('mousemove', (e) => {
        const rect = btn.getBoundingClientRect();
        const x = e.clientX - rect.left - rect.width / 2;
        const y = e.clientY - rect.top - rect.height / 2;
        btn.style.transform = `translate(${x * 0.15}px, ${y * 0.15}px)`;
    });
    btn.addEventListener('mouseleave', () => { btn.style.transform = ''; });
});

// Parallax on Why Retain image
window.addEventListener('scroll', () => {
    const img = document.getElementById('parallaxImg');
    if (!img) return;
    const rect = img.getBoundingClientRect();
    const inView = rect.top < window.innerHeight && rect.bottom > 0;
    if (inView) {
        const offset = (rect.top - window.innerHeight / 2) * 0.04;
        img.style.transform = `translateY(${offset}px)`;
    }
}, { passive: true });

// Rotating text animation
(function() {
    const inner = document.querySelector('.rotating-text-inner');
    if (!inner) return;
    const words = inner.querySelectorAll('.rotating-word');
    const totalOriginal = words.length;
    // Clone first word to end for seamless wrap
    const clone = words[0].cloneNode(true);
    inner.appendChild(clone);
    const totalWithClone = totalOriginal + 1;
    let current = 0;
    setInterval(() => {
        current++;
        inner.style.transition = 'transform 0.45s cubic-bezier(0.65, 0, 0.35, 1)';
        inner.style.transform = 'translateY(-' + (current * 100 / totalWithClone) + '%)';
        // If we just animated to the clone (last position), reset to real first after transition
        if (current === totalOriginal) {
            setTimeout(() => {
                inner.style.transition = 'none';
                current = 0;
                inner.style.transform = 'translateY(0%)';
            }, 470);
        }
    }, 2500);
})();
</script>
