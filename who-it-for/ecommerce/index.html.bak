<script>
// How It Works - Compact horizontal reveal + connector animation
(function() {
    var grid = document.getElementById('hiwGrid');
    if (!grid) return;
    var cards = grid.querySelectorAll('.hiw-reveal-up');
    var obs = new IntersectionObserver(function(entries) {
        entries.forEach(function(e) {
            if (e.isIntersecting) { e.target.classList.add('visible'); obs.unobserve(e.target); }
        });
    }, { threshold: 0.2 });
    cards.forEach(function(el) { obs.observe(el); });

    var section = document.getElementById('howItWorks');
    var connObs = new IntersectionObserver(function(entries) {
        entries.forEach(function(e) {
            if (e.isIntersecting) {
                setTimeout(function() {
                    var f1 = document.getElementById('hiwConnFill1');
                    if (f1) f1.style.width = '100%';
                    ['hiwDot1','hiwDot2'].forEach(function(id) { var d = document.getElementById(id); if(d) d.classList.add('active'); });
                    setTimeout(function() {
                        var f2 = document.getElementById('hiwConnFill2');
                        if (f2) f2.style.width = '100%';
                        ['hiwDot3','hiwDot4'].forEach(function(id) { var d = document.getElementById(id); if(d) d.classList.add('active'); });
                    }, 400);
                }, 600);
                connObs.unobserve(e.target);
            }
        });
    }, { threshold: 0.3 });
    connObs.observe(section);
})();
</script>
